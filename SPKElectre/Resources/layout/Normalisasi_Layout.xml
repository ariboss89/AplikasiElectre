<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
		android:layout_gravity="center_vertical"
		android:id="@+id/toolbar"
		android:layout_width="match_parent"
		android:background="@color/colorAccent"
		android:elevation="4dp"
        android:padding="10dp"
		android:layout_height="?android:attr/actionBarSize"
        android:layout_weight="0">

        <LinearLayout
            android:paddingTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="1">

            <TextView
                android:layout_width="0dp"
                android:gravity="center"
                android:layout_height="match_parent"
                android:layout_weight="0.75"
                android:textColor="@color/colorWhite"
                android:textStyle="bold"
                android:text="MENU NORMALISASI"
                />


        </LinearLayout>
	</LinearLayout>

    <LinearLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent">

        <LinearLayout
        android:padding="5dp"
        android:orientation="horizontal"
        android:layout_width="match_parent"
            android:background="@drawable/rect"
        android:weightSum="1"
        android:layout_height="wrap_content">

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.1"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Id"
            android:textColor="@color/colorBlack"
            android:id="@+id/txtNama"
            />

        <Space
            android:layout_width="0dp"
            android:layout_weight="0.03"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:textStyle="bold"
            android:text="Alternatif"
            android:textColor="@color/colorBlack"
            android:layout_height="wrap_content"
           android:id="@+id/txtHasilAkhir"
            />

        <Space
            android:layout_width="0dp"
            android:layout_weight="0.025"
            android:layout_height="wrap_content"/>
 
        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.3"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Pilihan"
            android:textColor="@color/colorBlack"
            android:id="@id/txtPilihan"
            />

        <Space
            android:layout_width="0dp"
            android:layout_weight="0.03"
            android:layout_height="wrap_content"/>

        <TextView
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_weight="0.25"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="Normalisasi"
            android:textColor="@color/colorBlack"
            android:id="@+id/txtNilai"
            />

    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:weightSum="1">
            <ListView
                android:layout_gravity="center"
                android:background="@color/colorWhite"
                android:id="@+id/lvNormalisasi"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.9"/>

            <Button
                android:id="@+id/btnBobot"
                android:backgroundTint="@color/colorError"
                android:layout_width="match_parent"
                android:textColor="@color/colorWhite"
                android:layout_height="0dp"
                android:text="PERHITUNGAN BOBOT MATRIKS"
                android:layout_weight="0.1"/>
    </LinearLayout>

    </LinearLayout>

</LinearLayout>

